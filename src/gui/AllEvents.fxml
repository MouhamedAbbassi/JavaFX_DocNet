      <HBox layoutX="235.0" layoutY="109.0" prefHeight="33.0" prefWidth="200.0">
         <children>
            <TextField fx:id="searchTxt" onKeyTyped="#findEvents" prefHeight="38.0" prefWidth="200.0" promptText="rechercher" />
         </children>
      </HBox>
      <Button id="updateEventBtn" fx:id="qrbtn" layoutX="662.0" layoutY="438.0" onAction="#showQr" onMouseClicked="#updateEvent" style="-fx-background-color: green;" text="QR Code" textFill="#fffafa" />
      <Label fx:id="quote" layoutX="215.0" layoutY="473.0" text="Quote" />

   </children>
</AnchorPane>
