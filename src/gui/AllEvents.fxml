            <TableColumn fx:id="prix" prefWidth="99.0" text="prix" />
            <TableColumn fx:id="local" prefWidth="203.0" text="local" />

        </columns>
      </TableView>
       <Button id="deleteEventBtn" layoutX="313.0" layoutY="438.0" onMouseClicked="#deleteEvent" style="-fx-background-color: #ff2e2e;" text="Delete" textFill="WHITE" />
       <Button id="updateEventBtn" fx:id="updateEventBtn" layoutX="498.0" layoutY="438.0" onAction="#updateEvent" onMouseClicked="#updateEvent" style="-fx-background-color: green;" text="update" textFill="#fffafa" />
      <TextField fx:id="upnom" layoutX="235.0" layoutY="378.0" prefHeight="24.0" prefWidth="129.0" promptText="nom" />
      <TextField fx:id="upcapacite" layoutX="374.0" layoutY="378.0" prefHeight="24.0" prefWidth="91.0" />
      <TextField fx:id="uplocal" layoutX="477.0" layoutY="378.0" />
