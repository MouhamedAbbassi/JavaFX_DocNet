<AnchorPane prefHeight="600.0" prefWidth="1100.0" stylesheets="@styles/bg.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AllEvents">
   <children>
