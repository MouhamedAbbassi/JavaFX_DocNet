        <columns>
          <TableColumn fx:id="id" prefWidth="75.0" text="id" />
          <TableColumn fx:id="nom" prefWidth="104.0" text="nom" />
            <TableColumn fx:id="prix" prefWidth="99.0" text="prix" />
            <TableColumn fx:id="local" prefWidth="203.0" text="local" />

        </columns>
      </TableView>
       <Button id="deleteEventBtn" layoutX="125.0" layoutY="343.0" onMouseClicked="#deleteEvent" style="-fx-background-color: #ff2e2e;" text="Delete" textFill="WHITE" />
       <Button id="updateEventBtn" fx:id="updateEventBtn" layoutX="310.0" layoutY="343.0" onAction="#updateEvent" onMouseClicked="#updateEvent" style="-fx-background-color: green;" text="update" textFill="#fffafa" />
      <TextField fx:id="upnom" layoutX="47.0" layoutY="283.0" prefHeight="24.0" prefWidth="129.0" promptText="nom" />
      <TextField fx:id="upcapacite" layoutX="186.0" layoutY="283.0" prefHeight="24.0" prefWidth="91.0" />
      <TextField fx:id="uplocal" layoutX="289.0" layoutY="283.0" />
      <TextField fx:id="upprix" layoutX="474.0" layoutY="283.0" prefHeight="24.0" prefWidth="91.0" />
      <DatePicker fx:id="update" layoutX="42.0" layoutY="310.0" />
      <TextField fx:id="updescription" layoutX="257.0" layoutY="310.0" prefHeight="24.0" prefWidth="312.0" />
      <Button id="updateEventBtn" fx:id="save" layoutX="387.0" layoutY="343.0" onAction="#saveEvent" onMouseClicked="#updateEvent" style="-fx-background-color: green;" text="save" textFill="#fffafa" />
      <HBox layoutX="47.0" layoutY="14.0" prefHeight="33.0" prefWidth="200.0">
         <children>
            <TextField fx:id="searchTxt" onKeyTyped="#findEvents" prefHeight="38.0" prefWidth="200.0" />
         </children>
      </HBox>
      <Button id="updateEventBtn" fx:id="qrbtn" layoutX="474.0" layoutY="343.0" onAction="#showQr" onMouseClicked="#updateEvent" style="-fx-background-color: green;" text="QR Code" textFill="#fffafa" />
      <Label fx:id="quote" layoutX="27.0" layoutY="378.0" text="Quote" />

   </children>
</AnchorPane>
