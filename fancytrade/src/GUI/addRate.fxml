<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.AddRateController">
    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        
        <Label text="Med ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="medIdTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Make Rate ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="makeRateIdTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Note:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="noteTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Opinion:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="opinionTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button fx:id="addRateButton" text="Add Rate" GridPane.columnIndex="1" GridPane.rowIndex="4" onAction="#handleAddRate"/>
    </GridPane>
</AnchorPane>
